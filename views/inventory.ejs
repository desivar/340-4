<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css"> </head>
<body>
    <header>
        <%- include('partials/header') %> <%- include('partials/navigation') %> </header>

    <main class="container">
        <h1><%= title %></h1>

        <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
            </ul>
        <% } %>

        <section class="vehicle-list">
            <% if (vehicles && vehicles.length > 0) { %>
                <ul class="vehicle-grid">
                    <% vehicles.forEach(vehicle => { %>
                        <li class="vehicle-item">
                            <div class="vehicle-image">
                                <img src="<%= vehicle.inv_image || '/images/no-image.png' %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                            </div>
                            <div class="vehicle-details">
                                <h3><%= vehicle.inv_make %> <%= vehicle.inv_model %></h3>
                                <p>Year: <%= vehicle.inv_year %></p>
                                <p>Price: $<%= vehicle.inv_price %></p>
                                <button class="add-to-favorites-btn" data-vehicle-id="<%= vehicle.inv_id %>">
                                    Add to Favorites
                                </button>
                                <a href="/inv/detail/<%= vehicle.inv_id %>">View Details</a>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p class="empty-message">No vehicles available at the moment.</p>
            <% } %>
        </section>
    </main>

    <footer>
        <%- include('partials/footer') %> </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const favoriteButtons = document.querySelectorAll('.add-to-favorites-btn');

            favoriteButtons.forEach(button => {
                button.addEventListener('click', async (event) => {
                    const vehicleId = event.target.dataset.vehicleId;

                    if (vehicleId) {
                        try {
                            const response = await fetch('/account/add-favorite', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ inv_id: vehicleId }),
                            });

                            const data = await response.json();

                            if (data.success) {
                                alert('Vehicle added to favorites!'); // Consider more user-friendly feedback
                                button.textContent = 'Added to Favorites';
                                button.disabled = true;
                            } else if (data.error === 'You must be logged in to add favorites.') {
                                window.location.href = '/login';
                            } else {
                                alert(`Failed to add to favorites: ${data.error || 'Unknown error'}`);
                            }
                        } catch (error) {
                            console.error('Error adding to favorites:', error);
                            alert('An error occurred while adding to favorites.');
                        }
                    } else {
                        console.error('Vehicle ID not found on the button.');
                    }
                });
            });
        });
    </script>
</body>
</html>